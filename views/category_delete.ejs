<%- include("header", {title: title}) %>

<h1 class="my-2"><%- title %></h1>

<div class="my-4 d-flex flex-column gap-3">


  <% if (category_items?.length) { %>

    <p> <strong>Delete the following Items before attempting to delete this category</strong></p>
   
    <% category_items.forEach(item => { %>
      <div class="my-4">
        <a <%- `href="/item/${item._id}" ` %>
          >
          <h2 class="my-1"><%- item.name %></h2></a
        >
        <h3 class="fs-6 fw-lighter my-0"><%- item.category.name %></h3>
      </div>
      <% }) %>

  <% } else { %>

  <h2>Are you sure you want to delete this item?</h2>
  <form action="" method="post">
    <div class="form-group">
      <input type="hidden" id="categoryid" name="categoryid" class="form-control" required value=<%- category._id %> >

      <button class="btn btn-primary" type="submit">Delete</button>
    </div>
  </form>

  <% } %> 
</div>

<%- include("footer") %>
