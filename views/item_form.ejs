<%- include("header", {title: title}) %>

<h1 class="my-2"><%- title %></h1>

<form action="" method="post" class="d-flex flex-column gap-3">
  <div class="form-group">
    <label for="name">Name:</label>
    <input
      class="form-control"
      type="text"
      id="name"
      name="name"
      placeholder="Name"
      required
      <%- item?.name && `value="${item.name}" ` %>
    />
    
  </div>
  <div class="form-group">
    <label for="category">Category:</label>
    <select name="category" id="category" class="form-control">
      <% category_list.forEach(category => { %>
      <option <%- `value="${category._id}" ` %> <%- category._id.toString() === item?.category._id.toString() ?  "selected" : "" %>  ><%- category.name %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="description">Description:</label>
    <textarea
      id="description"
      name="description"
      placeholder="Description"
      cols="30"
      rows="10"
      class="form-control"
      required
    ><%- item?.description && item.description %></textarea>
  </div>
  <div class="form-group">
    <label for="stock">Number In Stock:</label>
    <input
      class="form-control"
      type="number"
      id="stock"
      name="stock"
      placeholder="Number in Stock"
      required
      <%- item?.numberInStock && `value="${item.numberInStock}" ` %>
    />
  </div>
  <div class="form-group">
    <label for="price">Price:</label>
    <input
      class="form-control"
      type="number"
      id="price"
      name="price"
      placeholder="Price"
      step="0.01"
      required
      <%- item?.price && `value="${item.price}" ` %>
    />
  </div>

  <button class="btn btn-primary" type="submit">Submit</button>
</form>

<% if (errors) { %>

<ul>
  <% errors.forEach(error => { %>
  <li><%- error.msg %></li>
  <% }) %>
</ul>

<% } %> <%- include("footer") %>
